{
  "name": "@sprintwerk/node-weatherkit",
  "version": "1.0.0-beta.0",
  "description": "Apple WeatherKit client for NodeJS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "clean": "rimraf dist",
    "example": "npm run build && node --experimental-specifier-resolution=node dist/examples/basic.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sprintwerk/node-weatherkit.git"
  },
  "keywords": [
    "weatherkit",
    "apple",
    "weather",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "Manuel Heidrich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sprintwerk/node-weatherkit/issues"
  },
  "homepage": "https://github.com/sprintwerk/node-weatherkit#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
